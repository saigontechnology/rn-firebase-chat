{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "rn-firebase-chat": [
        "../src/index"
      ]
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.js",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios"
  ]
}