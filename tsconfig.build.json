{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./lib",
    "removeComments": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "example",
    "node_modules",
    "lib",
    "**/*.test.*",
    "**/__tests__/**",
    "**/*.spec.*",
    "**/jest.setup.*"
  ]
}